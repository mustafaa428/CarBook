@model CreateBannerDto
@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Banner Girişi</h4>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputLuggage">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputLuggage" asp-for="Title" >
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputLuggage" asp-for="Description" >
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Video url</label>
                                <input type="text" class="form-control" id="exampleInputLuggage" asp-for="VideoUrl" >
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Video açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputLuggage" asp-for="VidepDescription" >
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banneri Kaydet</button>
                        </form>

                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>

