@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hakkımızda alanı</h4>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Hakkımızda başlığı</th>
                                        <th>Hakkımızda Açıklaması</th>
                                        <th>Video url</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.title</td>
                                                <td>@item.description</td>
                                                <td>@item.imageUrl</td>
                                                <td><a href="/Admin/AdminAbout/DeleteAbout/@item.aboutId" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/AdminAbout/UpdateAbout/@item.aboutId" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <th scope="row">-</th>
                                            <td>-</td>
                                            <td>-</td>
                                            <td>-</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @if (Model.Count == 0)
                            {
                                <td><a href="/Admin/AdminAbout/CreateAbout" class="btn btn-outline-primary">Yeni hakkımızda girişi</a></td>
                            }
                            else
                            {

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

