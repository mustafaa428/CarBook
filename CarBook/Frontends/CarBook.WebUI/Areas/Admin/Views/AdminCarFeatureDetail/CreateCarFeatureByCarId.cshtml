@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "CreateCarFeatureByCarId";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araca ait özellik ekleme sayfası</h4>
                        <form method="post" asp-controller="AdminCarFeatureDetail" asp-action="Index" asp-area="Admin">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check">
                                    <input type="hidden" asp-for="@Model[i].FeatureId" />
                                    <input type="hidden" asp-for="@Model[i].Name" />
                                    <input type="checkbox"  class="form-check-input" />
                                    <label class="form-check-label">@Model[i].Name</label>
                                </div>
                            }
                            <button class="btn btn-primary">Araca özellikleri ata kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

