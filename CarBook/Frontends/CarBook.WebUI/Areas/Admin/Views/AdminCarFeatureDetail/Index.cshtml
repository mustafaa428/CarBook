@model List<GetCarFeatureByCarIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araca ait özellikler listesi</h4>
                        <form method="post" asp-controller="AdminCarFeatureDetail" asp-action="Index" asp-area="Admin">
                            @for(int i=0; i < Model.Count; i++)
                            {
                                <div class="form-check">
                                    <input type="hidden" asp-for="@Model[i].carFeatureId" />
                                    <input type="hidden" asp-for="@Model[i].featureName" />
                                    <input type="checkbox" asp-for="@Model[i].available"  class="form-check-input"/>
                                    <label class="form-check-label" for="@Model[i].available">@Model[i].featureName</label>
                                </div>
                            }
                            <button class="btn btn-success">Değişiklikleri kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>