@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yazar güncellemesi</h4>
                        <form method="post">
                            <input type="hidden" asp-for="AuthorId" />
                            <div class="form-group">
                                <label for="exampleInputLuggage">Yazar adı</label>
                                <input type="text" class="form-control" id="exampleInputLuggage" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Yazar açıklaması Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputLuggage" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Yazar fotoğrafı</label>
                                <input type="text" class="form-control" id="exampleInputLuggage" asp-for="ImageUrl">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">bilgileri güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

