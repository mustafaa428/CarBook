@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referans bilgileri</h4>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>fotoğraf</th>
                                        <th>Adı</th>
                                        <th>başlık</th>
                                        <th>yorum</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td>@count</td>
                                                <td><img src="@item.imageUrl" alt="" style="height:75px; width:75px" /></td>
                                                <td>@item.name</td>
                                                <td>@item.title</td>
                                                <td>@item.comment</td>
                                                <td><a href="/Admin/AdminTestimonial/DeleteTestimonial/@item.testimonialId" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.testimonialId" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <th scope="row">-</th>
                                            <td>-</td>
                                            <td>-</td>
                                            <td>-</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a href="/Admin/AdminTestimonial/CreateTestimonial" class="btn btn-outline-primary">Referans girişi</a></td>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

