<script src="~/Admin/plugins/plugins/datatables/buttons.print.min.js"></script>
<script src="~/Admin/plugins/plugins/datatables/dataTables.keyTable.min.js"></script>
<script src="~/Admin/plugins/plugins/datatables/dataTables.select.min.js"></script>
<script src="~/Admin/plugins/plugins/datatables/pdfmake.min.js"></script>
