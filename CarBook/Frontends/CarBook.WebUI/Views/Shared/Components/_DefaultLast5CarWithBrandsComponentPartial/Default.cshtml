@model List<ResultLast5GetCarWithBrandDto>

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">Önerilerimiz</span>
                <h2 class="mb-2">Öne çıkan araçlarımız</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="carousel-car owl-carousel">
                    @if (Model != null && Model.Any())
                    {
                        foreach(var item in Model)
                        {
                            <div class="item">
                        <div class="car-wrap rounded ftco-animate">
                            <div class="img rounded d-flex align-items-end" style="background-image: url(@item.coverImageUrl);">
                            </div>
                            <div class="text">
                                <h2 class="mb-0"><a href="#">@item.brandName</a></h2>
                                <div class="d-flex mb-3">
                                    <span class="cat">@item.model</span>
                                    <p class="price ml-auto">1500 TL <span>/Gün</span></p>
                                </div>
                                <p class="d-flex mb-0 d-block"><a href="#" class="btn btn-primary py-2 mr-1">Hemen kirala</a> <a href="#" class="btn btn-secondary py-2 ml-1">Detay</a></p>
                            </div>
                        </div>
                    </div>
                        }
                    }
                    else
                    {
                        <p></p>
                    }
                    
                </div>
            </div>
        </div>
    </div>
</section>