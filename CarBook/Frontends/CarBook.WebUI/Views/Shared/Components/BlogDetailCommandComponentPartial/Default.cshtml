@using CarBook.Dto.CommentDtos
@model List<ResultCommentDto>

<h4 class="mb-5">@ViewBag.CommentCount Yorum</h4>
<ul class="comment-list">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <li class="comment">
@*                 <div class="vcard bio">
                    <img src="images/person_1.jpg" alt="Image placeholder">
                </div> *@
                <div class="comment-body">
                    <h3>@item.Name</h3>
                    <div class="meta">@(((DateTime)item.CreatedDate).ToString("dd-MMM-yyyy"))</div>
                    <p>@item.Description</p>
                    <p><a href="#" class="reply">cevap ver</a></p>
                </div>
            </li>
        }

    }
    else
    {
        <h3>Herhangi bir yorum bulunmamaktadır.</h3>
    }
</ul>