@using CarBook.Dto.LocationDtos
@model ResultLocationDto
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    @await Component.InvokeAsync("_HeadUILayoutComponentPartial")
</head>
<body>
    @await Component.InvokeAsync("_NavbarUILayoutComponentPartial")
    
    @await Component.InvokeAsync("_DefaultCoverUILayoutComponentPartial")

    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12	featured-top">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex align-items-center">
                            <form method="post" class="request-form ftco-animate bg-primary">
                                <h2>Şimdi aracınız kiralayın</h2>
                                <div class="form-group">
                                    <label for="" class="label">Alınacak lokasyon</label>
                                    @Html.DropDownListFor(x => x.LocationId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control",  style = "background: #1089FF !important; color: white" })
                                </div>

                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Alınma tarihi</label>
                                        <input type="text" class="form-control" name="book_pick_date" id="book_pick_date" placeholder="Araç Alış Tarihi">
                                    </div>
                                    <div class="form-group ml-2">
                                        <label for="" class="label">İade tarihi</label>
                                        <input type="text" class="form-control" name="book_off_date" id="book_off_date" placeholder="Araç İade Tarihi">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">Alış saati</label>
                                    <input type="text" class="form-control" name="time_pick" id="time_pick" placeholder="Araç Alış saati">
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">İade saati</label>
                                    <input type="text" class="form-control" name="time_off" id="time_pick" placeholder="Araç İade Saati">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-secondary py-3 px-4" style="border-radius:15px">Uygun Araçları listele</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100">
                                <h3 class="heading-section mb-4">Araç kiralamanın en basit yolu</h3>
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Almak istediğin konumu seç</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">En uygun araçları gör</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Kiralamayı tamamla, Hepsi bu</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p><a href="/CarPricing/Index" class="btn btn-primary py-3 px-4">Araç Fiyatlarını Listele</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>

    @await Component.InvokeAsync("_DefaultLast5CarWithBrandsComponentPartial")

    @await Component.InvokeAsync("AboutUsComponentPartial")

    @await Component.InvokeAsync("_ServiceComponentPartial")

    @await Component.InvokeAsync("BecomeADriverComponentPartial")

    @await Component.InvokeAsync("TestimonialComponentPartial")

    @await Component.InvokeAsync("GetLast3BlogsAuthor")

    @await Component.InvokeAsync("DefaultStaticComponentPartial")
    
    @await Component.InvokeAsync("_FooterUILayoutComponentPartial")

    @await Component.InvokeAsync("_ScriptUILayoutComponentPartial")

</body>
</html>

