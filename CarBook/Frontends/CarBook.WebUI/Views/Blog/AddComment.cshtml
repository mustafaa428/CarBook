<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum yap</h3>
    <form method="post" asp-action="AddComment" asp-controller="Blog" class="p-5 bg-light">
        <input type="hidden" name="BlogId" value="@ViewBag.Blogid" class="form-control" id="name">
        <div class="form-group">
            <label for="name">Adınız Soyadınız *</label>
            <input type="text" name="Name"  class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="email">Mail Adresiniz *</label>
            <input type="email" name="Email" class="form-control" id="email">
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea  id="message" name="Description" cols="30" rows="5" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum yap" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>